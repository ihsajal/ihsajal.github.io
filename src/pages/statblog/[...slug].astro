---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { siteConfig } from "../../config";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("statblog");
  return posts
    .filter((p) => !p.slug.startsWith("_"))
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<SiteLayout pageTitle={post.data.title} siteConfig={siteConfig}>
  <main class="mx-auto max-w-6xl px-8 pt-24 pb-10">
    <header class="mb-8">
      <h1 class="text-3xl font-semibold tracking-tight">{post.data.title}</h1>
      {post.data.description ? (
        <p class="mt-2 text-gray-700">{post.data.description}</p>
      ) : null}
      <div class="mt-2 text-sm text-gray-700">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString("en-US", {
            month: "long",
            day: "2-digit",
            year: "numeric",
          })}
        </time>
      </div>
    </header>

    <article class="prose prose-gray max-w-none">
      <Content />
    </article>

    <footer class="mt-10">
      <a href="/statblog" class="text-sm text-gray-600 hover:underline">
        ‚Üê Back to StatBlog
      </a>
    </footer>
  </main>
</SiteLayout>
