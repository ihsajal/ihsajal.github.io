---
import { siteConfig } from "../config";
const hasPublications =
  siteConfig.publications && siteConfig.publications.length > 0;
---

{
  hasPublications && (
    <section id="publications" class="p-4 sm:p-8 md:p-12 lg:p-16 xl:p-24">
      <div class="max-w-7xl mx-auto">
        {/* Section header (full width) */}
        <div>
          <h2 class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-bold text-gray-900">
            Publications
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        {/* Publications list (below header) */}
        <div class="mt-8 space-y-4">
          {siteConfig.publications.map((pub) => (
            <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-3 sm:p-4 md:p-5 hover:shadow-md transition-shadow duration-300">
              
              {/* Title */}
              <h3 class="text-sm sm:text-base font-semibold text-gray-900 mb-1 leading-snug">
                {pub.title}
              </h3>

              {/* Authors */}
              <p
                class="text-xs sm:text-sm text-gray-700"
                set:html={pub.authors}
              />

              {/* Venue + year */}
              <p class="text-xs sm:text-sm text-gray-600 mt-1">
                <span class="italic">{pub.venue}</span>, {pub.year}
                {pub.details && ` â€” ${pub.details}`}
              </p>

            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
