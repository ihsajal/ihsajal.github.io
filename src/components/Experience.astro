---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="p-4 sm:p-8 md:p-12 lg:p-16 xl:p-24">

      <div>
        <div class="max-w-7xl mx-auto">
  {/* Section header (full width) */}
  <div>
    <h2 class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-bold text-gray-900">
      Experience
    </h2>
    <div
      class="w-[75px] h-[5px] mt-2 rounded-full"
      style={`background-color: ${siteConfig.accentColor}`}
    />
  </div>

  {/* Cards (below header) */}
  <div class="mt-8">
    <div class="flex flex-col lg:flex-row gap-6">
      {siteConfig.experience.map((exp, idx) => (
        <div
          class={`bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300
          ${idx === 0 ? "lg:w-[40%]" : "lg:w-[30%]"}`}
        >
          <div class="flex items-start gap-4">
            {exp.logo && (
              <div class="w-20 h-20 sm:w-24 sm:h-24 flex items-center justify-center flex-shrink-0">
                <img
                  src={exp.logo}
                  alt={`${exp.company} logo`}
                  class="max-w-full max-h-full object-contain"
                  loading="lazy"
                />
              </div>
            )}

            <div class="min-w-0 flex-1">
              <h3 class="text-base sm:text-lg font-semibold text-gray-900 leading-snug">
                {exp.title}
              </h3>
              <p
                class="text-sm sm:text-base"
                style={`color: ${siteConfig.accentColor}`}
              >
                {exp.company}
              </p>

              {exp.location && (
                <p class="text-xs sm:text-sm text-gray-500 mt-1">
                  {exp.location}
                </p>
              )}

              <p class="text-xs sm:text-sm text-gray-500 mt-1">
                {exp.dateRange}
              </p>
            </div>
          </div>

          <ul class="mt-4 space-y-2">
            {exp.bullets.map((bullet) => (
              <li class="flex items-start">
                <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                <span class="text-sm text-gray-600">
                  {bullet}
                </span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</div>





        </div>
      </div>
    </section>
  )
}
